{
	"name": "clips-ide",
	"displayName": "CLIPS",
	"description": "Provides a similar experience to the CLIPS IDE inside VSCode",
	"version": "0.0.1",
	"private": "true",
	"engines": {
		"vscode": "^1.61.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:clips-ide.open-clips-env",
		"onCommand:clips-ide.load-file",
		"onCommand:clips-ide.load-current-file",
		"onCommand:clips-ide.cmd-reset",
		"onCommand:clips-ide.cmd-clear"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "clips",
				"aliases": [
					"CLIPS",
					"clips",
					"clp"
				],
				"extensions": [
					".clp"
				]
			}
		],
		"commands": [
			{
				"command": "clips-ide.open-clips-env",
				"title": "CLIPS: Open CLIPS Environment"
			},
			{
				"command": "clips-ide.load-file",
				"title": "CLIPS: Load File...",
				"enablement": "clips-ide.terminalOpen"
			},
			{
				"command": "clips-ide.load-current-file",
				"title": "CLIPS: Load Current File",
				"enablement": "clips-ide.terminalOpen"
			},
			{
				"command": "clips-ide.cmd-reset",
				"title": "CLIPS: Command - Reset",
				"enablement": "clips-ide.terminalOpen"
			},
			{
				"command": "clips-ide.cmd-clear",
				"title": "CLIPS: Command - Clear",
				"enablement": "clips-ide.terminalOpen"
			},
			{
				"command": "clips-ide.cmd-run",
				"title": "CLIPS: Command - Run",
				"enablement": "clips-ide.terminalOpen"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "clips-ide.open-clips-env",
					"when": "resourceLangId == clips",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/async-lock": "^1.1.3",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/semver": "^7.3.8",
		"@types/vscode": "^1.61.0",
		"@typescript-eslint/eslint-plugin": "^4.31.1",
		"@typescript-eslint/parser": "^4.31.1",
		"@vscode/test-electron": "^1.6.2",
		"eslint": "^7.32.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.1",
		"typescript": "^4.4.3"
	},
	"dependencies": {
		"async-lock": "^1.3.0",
		"semver": "^7.3.5"
	}
}
