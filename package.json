{
	"name": "clips-ide",
	"displayName": "CLIPS",
	"description": "Provides a similar experience to the CLIPS IDE inside VSCode",
	"version": "0.0.1",
	"private": "true",
	"engines": {
		"vscode": "^1.61.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onTerminalProfile:clips-ide.clips-terminal",
		"onCommand:clips-ide.open-clips-env",
		"onCommand:clips-ide.open-terminal",
		"onCommand:clips-ide.load-file",
		"onCommand:clips-ide.load-current-file",
		"onCommand:clips-ide.cmd-reset",
		"onCommand:clips-ide.cmd-clear",
		"onCommand:clips-ide.cmd-run",
		"onCommand:clips-ide.open-doc-facts",
		"onCommand:clips-ide.open-doc-agenda"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "clips",
				"aliases": [
					"CLIPS",
					"clips",
					"clp"
				],
				"extensions": [
					".clp"
				]
			}
		],
		"commands": [
			{
				"command": "clips-ide.open-clips-env",
				"category": "CLIPS",
				"title": "Open CLIPS Environment",
				"icon": {
					"light": "media/clipslogo.png",
					"dark": "media/clipslogo_inverted.png"
				}
			},
			{
				"command": "clips-ide.open-terminal",
				"category": "CLIPS",
				"title": "Open Terminal"
			},
			{
				"command": "clips-ide.load-file",
				"category": "CLIPS",
				"title": "Load File...",
				"enablement": "clips-ide.terminalOpen"
			},
			{
				"command": "clips-ide.load-current-file",
				"category": "CLIPS",
				"title": "Load Current File",
				"enablement": "clips-ide.terminalOpen"
			},
			{
				"command": "clips-ide.cmd-reset",
				"category": "CLIPS Command",
				"title": "Reset",
				"enablement": "clips-ide.terminalOpen"
			},
			{
				"command": "clips-ide.cmd-clear",
				"category": "CLIPS Command",
				"title": "Clear",
				"enablement": "clips-ide.terminalOpen"
			},
			{
				"command": "clips-ide.cmd-run",
				"category": "CLIPS Command",
				"title": "Run",
				"enablement": "clips-ide.terminalOpen"
			},
			{
				"command": "clips-ide.open-doc-facts",
				"category": "CLIPS View",
				"title": "Facts",
				"enablement": "clips-ide.terminalOpen"
			},
			{
				"command": "clips-ide.open-doc-agenda",
				"category": "CLIPS View",
				"title": "Agenda",
				"enablement": "clips-ide.terminalOpen"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "clips-ide.open-clips-env",
					"when": "resourceLangId == clips && !clips-ide.terminalOpen",
					"group": "navigation"
				}
			],
			"editor/context": [
				{
					"command": "clips-ide.load-current-file",
					"when": "resourceLangId == clips && clips-ide.terminalOpen"
				}
			],
			"editor/title/run": [
				{
					"submenu": "clips-ide.menu",
					"when": "resourceLangId == clips && clips-ide.terminalOpen",
					"group": "clips"
				}
			],
			"clips-ide.menu": [
				{
					"command": "clips-ide.load-current-file",
					"when": "resourceLangId == clips && clips-ide.terminalOpen",
					"group": "clips"
				},
				{
					"submenu": "clips-ide.menu-doc",
					"when": "resourceLangId == clips && clips-ide.terminalOpen"
				},
				{
					"submenu": "clips-ide.menu-cmd",
					"when": "resourceLangId == clips && clips-ide.terminalOpen"
				}
			],
			"clips-ide.menu-doc": [
				{
					"command": "clips-ide.open-doc-facts",
					"when": "resourceLangId == clips && clips-ide.terminalOpen",
					"group": "clips.view"
				},
				{
					"command": "clips-ide.open-doc-agenda",
					"when": "resourceLangId == clips && clips-ide.terminalOpen",
					"group": "clips.view"
				}
			],
			"clips-ide.menu-cmd": [
				{
					"command": "clips-ide.cmd-run",
					"when": "resourceLangId == clips && clips-ide.terminalOpen",
					"group": "clips.run"
				},
				{
					"command": "clips-ide.cmd-reset",
					"when": "resourceLangId == clips && clips-ide.terminalOpen",
					"group": "clips.run"
				},
				{
					"command": "clips-ide.cmd-clear",
					"when": "resourceLangId == clips && clips-ide.terminalOpen",
					"group": "clips.run"
				}
			]
		},
		"submenus": [
			{
				"id": "clips-ide.menu",
				"label": "CLIPS",
				"icon": {
					"light": "media/clipslogo.png",
					"dark": "media/clipslogo_inverted.png"
				}
			},
			{
				"id": "clips-ide.menu-doc",
				"label": "Views"
			},
			{
				"id": "clips-ide.menu-cmd",
				"label": "Commands"
			}
		],
		"terminal": {
			"profiles": [
				{
					"id": "clips-ide.clips-terminal",
					"title": "CLIPS"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/async-lock": "^1.1.3",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.61.0",
		"@typescript-eslint/eslint-plugin": "^4.31.1",
		"@typescript-eslint/parser": "^4.31.1",
		"@vscode/test-electron": "^1.6.2",
		"eslint": "^7.32.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.1",
		"node-pty": "^0.10.1",
		"typescript": "^4.4.3"
	},
	"dependencies": {
		"async-lock": "^1.3.0"
	}
}